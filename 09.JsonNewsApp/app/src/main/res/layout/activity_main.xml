<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.faiz.newsapp.MainActivity"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#757575"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView

       android:id="@+id/coverimage"
        android:background="#ff14"
        android:src="@drawable/aaa"
        android:layout_width="match_parent"
        android:layout_height="140sp" />


    <EditText
        android:gravity="center"
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/image"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:hint="Enter News For Search"
        android:textColor="#000" />

    <Button
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="#ff14"
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_edit_text"
        android:text="Search" />

    <TextView
        android:id="@+id/txt_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_search"
        android:paddingBottom="8dp"
        android:text="Enter text to search"

        android:textColor="#fff"
        android:textSize="16sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        <ListView

            android:id="@+id/books_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_response"
            android:background="#fff"/>
        </LinearLayout>

</LinearLayout>





